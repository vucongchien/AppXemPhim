<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    android:fitsSystemWindows="true">

    <!-- Video Preview -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blade Runner 2049"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <!-- Sub Info -->
            <LinearLayout
                android:id="@+id/sub_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16+"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HD"
                    android:textColor="#FFFFFF"
                    android:background="#444"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- Play Button -->
            <Button
                android:id="@+id/btnPlay"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Play"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:drawableStart="@drawable/play_video"
                android:background="@drawable/play_button_bg"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Download Button -->
            <Button
                android:id="@+id/btnDownload"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Download"
                android:textColor="#FFF"
                android:background="@drawable/play_button_bg"
                android:layout_marginBottom="12dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The contents of a hidden grave draw the interest of an industrial titan..."
                android:textColor="#CCC"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="15sp"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp" />

            <!-- Cast and Director -->
            <TextView
                android:id="@+id/actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cast: "
                android:textColor="#888"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/directors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Director: "
                android:textColor="#888"
                android:textSize="15sp"
                android:layout_marginTop="4dp" />

            <!-- Menu Buttons -->
            <LinearLayout
                android:id="@+id/menu_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <!-- My List -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/plus"
                        android:onClick="addMyList" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My List"
                        android:textColor="#FFF"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Rate -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/start"
                        android:onClick="rate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate"
                        android:textColor="#FFF"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Share -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        android:textColor="#FFF"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Video List Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="List Video"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <ListView
                android:id="@+id/listvideoDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="250dp"
                android:background="@drawable/bg_list_video"
                android:visibility="gone" />

            <!-- Comment Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <ListView
                android:id="@+id/list_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_list_video"
                android:scrollbars="vertical" />

            <!-- More Like This -->
            <TextView
                android:id="@+id/more_like_this"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More Like This"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listmovie"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scrollbars="horizontal" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
